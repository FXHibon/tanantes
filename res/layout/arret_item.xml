<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginDefault">

        <TextView
            android:id="@+id/arret_item_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/arret_item_arrets"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightLigneImage"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/arret_item_distance"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginDefault" />
    </LinearLayout>
</LinearLayout>